# Dockerfile for Moltbot VMs
# This image runs OpenClaw with user-specific configuration

FROM node:22-slim

# Install required packages
RUN apt-get update && apt-get install -y \
    curl \
    git \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user for security
RUN useradd -m -s /bin/bash moltbot
WORKDIR /home/moltbot

# Install OpenClaw globally
# Note: Replace with actual OpenClaw package when available
RUN npm install -g @anthropic-ai/claude-code || echo "OpenClaw package not yet available"

# Copy startup script
COPY --chown=moltbot:moltbot scripts/moltbot-entrypoint.sh /home/moltbot/entrypoint.sh
RUN chmod +x /home/moltbot/entrypoint.sh

# Switch to non-root user
USER moltbot

# Expose the WebSocket port for communication with ClawnBoard
EXPOSE 8080

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8080/health || exit 1

# Start the moltbot
ENTRYPOINT ["/home/moltbot/entrypoint.sh"]
